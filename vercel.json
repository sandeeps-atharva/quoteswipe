{
  "git": {
    "deploymentEnabled": {
      "main": true,
      "dev": false
    }
  },
  "crons": [
    {
      "path": "/api/cron/send-scheduled-emails",
      "schedule": "0 3 * * 1"
    }
  ],
  "headers": [
    {
      "source": "/api/quotes",
      "headers": [
        { "key": "CDN-Cache-Control", "value": "public, max-age=60, stale-while-revalidate=300" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=60, stale-while-revalidate=300" }
      ]
    },
    {
      "source": "/api/categories",
      "headers": [
        { "key": "CDN-Cache-Control", "value": "public, max-age=300, stale-while-revalidate=600" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=300, stale-while-revalidate=600" }
      ]
    },
    {
      "source": "/api/initial-data",
      "headers": [
        { "key": "CDN-Cache-Control", "value": "public, max-age=60, stale-while-revalidate=120" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=60, stale-while-revalidate=120" }
      ]
    },
    {
      "source": "/api/stats",
      "headers": [
        { "key": "CDN-Cache-Control", "value": "public, max-age=300" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=300" }
      ]
    }
  ]
}